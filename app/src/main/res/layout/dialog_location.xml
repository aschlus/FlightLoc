<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popupImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="206dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gra_popup" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="224dp"
        android:text="New Location"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupImg"
        app:layout_constraintEnd_toEndOf="@+id/popupImg"
        app:layout_constraintStart_toStartOf="@+id/popupImg"
        app:layout_constraintTop_toTopOf="@+id/popupImg"
        app:layout_constraintVertical_bias="0.507" />

    <EditText
        android:id="@+id/titleEdit"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gra_title"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="Title"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="50"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintEnd_toEndOf="@+id/popupImg"
        app:layout_constraintStart_toStartOf="@+id/popupImg"
        app:layout_constraintTop_toBottomOf="@+id/locationText" />

    <EditText
        android:id="@+id/townEdit"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gra_title"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="Town"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="50"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintEnd_toEndOf="@+id/popupImg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/popupImg"
        app:layout_constraintTop_toBottomOf="@+id/titleEdit" />

    <ImageButton
        android:id="@+id/cancelBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/popupImg"
        app:layout_constraintEnd_toEndOf="@+id/popupImg"
        app:layout_constraintStart_toStartOf="@+id/popupImg"
        app:layout_constraintTop_toBottomOf="@+id/townEdit" />

    <ImageButton
        android:id="@+id/checkBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@+id/popupImg"
        app:layout_constraintEnd_toEndOf="@+id/popupImg"
        app:layout_constraintStart_toStartOf="@+id/popupImg"
        app:layout_constraintTop_toBottomOf="@+id/townEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>